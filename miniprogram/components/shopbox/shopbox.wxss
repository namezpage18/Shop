.shop-box {
  display: flex;
  width: 100%;
  height: 400rpx;
  border-bottom: 1rpx solid gainsboro;
  box-sizing: border-box;
  padding: 20rpx 20rpx;
}

.shop-box .shop-box-left {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.shop-box .shop-box-left image {
  width: 300rpx;
  height: 300rpx;
}

.shop-box .shop-box-right {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.shop-box .shop-box-right .shop-box-title {
  line-height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.shop-box .shop-box-right .shop-sale {
  color: red;
}

.shop-box .shop-box-right .shop-msg {
  font-size: 24rpx;
  color: gray;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.shop-box .place {
  display: flex;
  align-items: center;
}

.shop-box .place image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.shop-box .place view {
  font-size: 24rpx;
}
